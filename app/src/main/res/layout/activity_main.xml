<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/background"
    android:focusableInTouchMode="true"
    tools:context="Activity_Main"
    android:id="@+id/activity_main">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0">

            <TableRow>
                <TextView
                    android:id="@+id/TextView_welcomeText"
                    android:text=" Welcome To The Social Bookstore "
                    android:layout_weight="1"
                    style="@style/TextMessageCustomStyle"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/editText_userName"
                    android:inputType="textPersonName"
                    android:hint="User Name"
                    style="@style/TextFieldCustomStyle"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editText_password"
                    android:inputType="textPassword"
                    android:hint="Password"
                    style="@style/TextFieldCustomStyle"/>
            </TableRow>

            <TableRow>
                <CheckBox
                    android:id="@+id/checkBox_isProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check here if you a Seller"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:background="@drawable/background_text_fields"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button_login"
                    android:text="Login"
                    style="@style/ButtonCustomStyle"/>
            </TableRow>

            <TableRow android:layout_marginTop="50dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/button_newUser"
                    android:text="New User"
                    style="@style/ButtonCustomStyle"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/button_admin"
                    android:text="Admin"
                    style="@style/ButtonCustomStyle"/>
            </TableRow>

        </TableLayout>

    </ScrollView>
</RelativeLayout>