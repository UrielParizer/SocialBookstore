<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="Fragment_DeleteBooksForSale"
    android:id="@+id/fragment_delete_books_for_sale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_marginTop="15dp">
                    <TextView
                        android:text="Choose one of your books:"
                        android:gravity="center_horizontal"
                        style="@style/SpinnerCustomStyle"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow>
                    <Spinner
                        android:id="@+id/spinner_booksList"
                        style="@style/SpinnerCustomStyle"/>
                </TableRow>

                <TableRow>
                    <Button
                        android:id="@+id/button_deleteBookForSale"
                        android:text="Delete"
                        style="@style/ButtonCustomStyle"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:textSize="14sp"/>
                </TableRow>

            </TableLayout>
    </ScrollView>
</LinearLayout>